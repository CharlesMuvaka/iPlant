<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/image2"
        android:layout_width="100dp"
        android:layout_height="80dp"
         app:lottie_autoPlay="true"
        app:lottie_loop="true"
        app:lottie_rawRes="@raw/moving"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/image3"
        app:layout_constraintBottom_toBottomOf="@id/image3"/>


    <TextView
        android:id="@+id/vendors"
        android:textSize="20sp"
        android:text="Welcome Charles!!"
        android:textColor="@color/dark_green"
        android:textStyle="bold"
        android:layout_marginStart="18dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/image3"
        app:layout_constraintStart_toEndOf="@id/image3"
        app:layout_constraintBottom_toTopOf="@id/slogan"
        />
    <TextView
        android:id="@+id/slogan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Buy a tree to save Nature"
        android:textStyle="italic"
        android:textColor="@color/dark_green"
        android:textSize="18sp"
        android:layout_marginBottom="2dp"
        android:layout_marginEnd="2dp"
        app:layout_constraintBottom_toTopOf="@id/search1"
        app:layout_constraintEnd_toStartOf="@id/image2"
        app:layout_constraintTop_toBottomOf="@id/vendors"
        app:layout_constraintStart_toStartOf="@id/vendors"
        />

    <ImageView
        android:id="@+id/image3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_baseline_menu_24"
        android:layout_margin="8dp"
        app:layout_constraintVertical_chainStyle="packed"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/vendors" />
    <SearchView
        android:id="@+id/search1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/light_green"
        android:layout_margin="8dp"
        app:layout_constraintTop_toBottomOf="@id/slogan"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@id/locat"

        />

    <TextView
        android:id="@+id/locat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Vendors in: Nairobi"
        android:textSize="20sp"
        android:layout_margin="4dp"
        android:textStyle="bold"
        android:textColor="@color/dark_green"
        app:layout_constraintStart_toStartOf="@id/search1"
        app:layout_constraintTop_toBottomOf="@id/search1"
        app:layout_constraintBottom_toTopOf="@id/myRecView"/>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/myRecView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="@color/white"
            app:layout_constraintTop_toBottomOf="@id/locat"
            app:layout_constraintBottom_toBottomOf="parent"/>


    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/dark_green"
        app:menu="@menu/bottom_menu"
        android:visibility="gone"
        app:itemTextColor="@color/light_green"
        app:labelVisibilityMode="labeled"
        app:itemIconTint="@color/light_green"
        app:layout_constraintBottom_toBottomOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>